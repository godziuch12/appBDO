@using ApplicationBDO.App_Helpers;
<aside id="left-panel">
    <div class="login-info">
        <span>
            <a href="javascript:void(0);" id="show-shortcut" data-action="toggleShortcut">
                <span>@User.FullName() </span>
                <i class="fa fa-angle-down"></i>
            </a>
        </span>
    </div>
    <nav>
        <ul>

            <li class="@Html.RouteIf("index", "active", null, new List<string>() { "pass" })">
                <a href="@Url.Action("Index", "Pass")"><i class="fa fa-lg fa-fw fa-search"></i> <span class="menu-item-parent">Odczyt</span></a>
            </li>
            <li class="@Html.RouteIf("createtimepass", "active", "Pass")">
                <a href="#" title="Dashboard"><i class="fa fa-lg fa-fw fa-credit-card"></i> <span class="menu-item-parent">Przewozy</span></a>
                <ul>
                    <li class="@Html.RouteIf("createtimepass", "active", "Pass")">
                        <a href="@Url.Action("CreateTimePass", "Pass")"><i class="fa fa-lg fa-fw fa-clock-o"></i> <span class="menu-item-parent">Przewoźnik</span></a>
                    </li>
                    <li class="@Html.RouteIf("createnamelesspass", "active", "Pass")">
                        <a href="@Url.Action("CreateNumberPass", "Pass")"><i class="fa fa-lg fa-fw fa-camera"></i> <span class="menu-item-parent">Odbiorca</span></a>
                    </li>
                </ul>
            </li>
            <li>
                <a href="@Url.Action("ChangePassword", "Manage")"> <i class="fa fa-lg fa-fw fa-edit"></i> <span class="menu-item-parent">Zmiana hasła</span></a>
            </li>
        </ul>
    </nav>
    <span class="minifyme" data-action="minifyMenu">
        <i class="fa fa-arrow-circle-left"></i>
    </span>
</aside>