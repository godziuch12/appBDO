@model ApplicationBDO.Models.TransportModels
@using ApplicationBDO.App_Helpers
@{
    ViewBag.Title = "Index";
}

<div id="content">
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-6">
                <div class="jarviswidget jarviswidget-color-orange2" id="wid-id-3" data-widget-editbutton="false" data-widget-custombutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Edytuj transportującego</h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body">
                            @using (Html.BeginForm("Edit", "Transport", FormMethod.Post, new { id = "order-form", @class = "smart-form" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationBootstrap()
                                <fieldset>
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <section class="col col-6">
                                        <div class="row">
                                            <label class="input">
                                                <i class="icon-prepend fa fa-user"></i>
                                                @Html.EditorFor(model => model.NIP, new { htmlAttributes = new { @class = "form-control", placeholder = "NIP" } })
                                            </label>
                                        </div>
                                    </section>
                                    <section class="col col-6">
                                        <div class="row">
                                            <label class="input">
                                                <i class="icon-prepend fa fa-user"></i>
                                                @Html.EditorFor(model => model.NumerRejestrowy, new { htmlAttributes = new { @class = "form-control", placeholder = "Numer rejestrowy" } })
                                            </label>
                                        </div>
                                    </section>
                                    <section class="col col-6">
                                        <div class="row">
                                            <label class="input">
                                                <i class="icon-prepend fa fa-user"></i>
                                                @Html.EditorFor(model => model.Adres, new { htmlAttributes = new { @class = "form-control", placeholder = "Adres" } })
                                            </label>
                                        </div>
                                    </section>
                                    <section class="col col-6">
                                        <div class="row">
                                            <label class="input">
                                                <i class="icon-prepend fa fa-user"></i>
                                                @Html.EditorFor(model => model.Nazwa, new { htmlAttributes = new { @class = "form-control", placeholder = "Nazwa" } })
                                            </label>
                                        </div>
                                    </section>
                                </fieldset>
                                <footer>
                                    <a href="@Url.Action("Index", "Transport")" , class="btn btn-primary"><i class="fa fa-arrow-left"></i> Powrót</a>
                                    <button type="submit" class="btn btn-success">
                                        <i class="fa fa-check"></i> Zapisz
                                    </button>
                                </footer>
                            }
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
